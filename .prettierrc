{
    "overrides": [
      {
        "files": "*.sol",
        "options": {
          "printWidth": 240,
          "tabWidth": 4,
          "useTabs": false,
          "singleQuote": false,
          "bracketSpacing": false,
          "explicitTypes": "always"
        }
      },
      {
        "files": "*.js",
        "options": {
          "printWidth": 125,
          "tabWidth": 4,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "es5"
        }
      },
      {
        "files": "*.ts",
        "options": {
          "printWidth": 125,
          "tabWidth": 4,
          "semi": true,
          "singleQuote": true,
          "bracketSpacing": true,
          "trailingComma": "es5"
        }
      }
    ]
  }